<h1>Editing Book</h1>

 <% if @book.errors.any? %>
    <div class="error-message">
      <h2 class="error-title"><%= @book.errors.count %>error prohibited this book from being saved:</h2>
        <ul class="error-body">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

<%= form_with model:@book, local: true do |f| %>
<div class="edit">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class="edit">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>
  <div class="edit">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
