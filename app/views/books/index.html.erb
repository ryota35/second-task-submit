<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<h2>New book</h2>


  <% if @book.errors.any? %>
    <div class="error-message">
      <h2 class="error-title"><%= @book.errors.count %>error prohibited this book from being saved:</h2>
        <ul class="error-body">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

<%= form_with model: @book, local: true do |f| %>
<div class="new-book">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class="new-book">
   <h4>Body</h4>
   <%= f.text_area :body %>
</div>
<div class="new-book">
    <h4>
    <%= f.submit 'Create Book' %>
    </h4>
</div>
<% end %>